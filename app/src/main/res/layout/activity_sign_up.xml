<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.NDCamera.FullScreen"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/signup_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ndcamera_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/signup_title"
        android:textColor="@color/red"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/red"
        android:text="Name"
        />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input_search"
        android:hint="Nuwanga"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:text="Email"
        />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input_search"
        android:hint="user@example.com"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Password"
        />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input_search"
        android:hint="........"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Password must contain at least 8 characters"
        android:textColor="@color/gray"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:text="Retype Password"/>


    <EditText
        android:id="@+id/signup_retype_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input_search"
        android:hint="........"
        android:textColor="@color/gray"
        android:textSize="12sp"/>


    <Button
        android:id="@+id/signup_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="already have an account ? "
            android:textColor="@color/gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/signup_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_signin"
            android:textColor="@color/light_blue"
            android:textSize="12sp"/>

    </LinearLayout>


